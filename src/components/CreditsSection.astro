<section id="credits" class="bg-secondary/30 px-6 py-16 md:py-20">
  <div class="mx-auto max-w-2xl">
    <!-- Header -->
    <div class="mb-8 text-center">
      <p class="text-muted-foreground mb-4 text-[10px] tracking-[0.35em] uppercase">
        Special Thanks
      </p>
      <h2 class="text-foreground mb-3 font-serif text-3xl md:text-4xl">ขอบคุณ</h2>
      <div class="bg-border mx-auto h-px w-10"></div>
    </div>

    <!-- Credits Section -->
    <div class="flex flex-col items-center gap-8">
      <!-- Logo SVG -->
      <a
        href="https://www.instagram.com/moniqueweddingbkk/"
        target="_blank"
        rel="noopener noreferrer"
        class="transition-opacity duration-300 hover:opacity-80"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 400" class="h-32 w-auto md:h-40">
          <g fill="currentColor" class="text-foreground">
            <text
              x="400"
              y="210"
              font-family="'Didot', 'Bodoni MT', 'Times New Roman', serif"
              font-size="130"
              font-weight="normal"
              text-anchor="middle"
              letter-spacing="2">MONIQUE</text
            >

            <text
              x="400"
              y="280"
              font-family="'Montserrat', 'Helvetica Neue', 'Arial', sans-serif"
              font-size="26"
              font-weight="bold"
              text-anchor="middle"
              letter-spacing="6">WEDDING</text
            >
          </g>
        </svg>
      </a>

      <!-- Contact Info -->
      <div class="text-muted-foreground space-y-2 text-center text-sm">
        <p>
          <a
            href="https://www.instagram.com/moniqueweddingbkk/"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-foreground inline-flex items-center gap-2 transition-colors duration-200"
          >
            <img src="/icons/instagram.svg" alt="Instagram" class="h-4 w-4" />
            @moniqueweddingbkk
          </a>
        </p>
        <p class="text-xs">ติดต่อจัดงานแต่งงาน & Pre-Wedding</p>
      </div>
    </div>
  </div>
</section>
